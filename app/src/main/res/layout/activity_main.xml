<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relay_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/vector_back" />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cek Kembali Isian Data"
                android:textSize="26sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#000" />

            <!--INPUT 10118071 DAVID-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp"
                android:text="NIK"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#000" />
            <EditText
                android:id="@+id/et_nik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="14184711718118"
                android:textSize="18sp"
                android:fontFamily="@font/rubik_regular"
                android:textColor="#000"
                android:background="@drawable/bg_edittext" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="Nama"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#000" />
            <EditText
                android:id="@+id/et_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Nama lengkap"
                android:textSize="18sp"
                android:fontFamily="@font/rubik_regular"
                android:textColor="#000"
                android:background="@drawable/bg_edittext" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="Tanggal Lahir"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#000" />
            <EditText
                android:id="@+id/et_tgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="08 Oktober 1999"
                android:textSize="18sp"
                android:fontFamily="@font/rubik_regular"
                android:textColor="#000"
                android:background="@drawable/bg_edittext" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="Jenis Kelamin"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#000" />
            <EditText
                android:id="@+id/et_jk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Jenis Kelamin"
                android:textSize="18sp"
                android:fontFamily="@font/rubik_regular"
                android:textColor="#000"
                android:background="@drawable/bg_edittext" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="Hubungan Dengan Anda"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#000" />
            <EditText
                android:id="@+id/et_hubungan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Orangtua"
                android:textSize="18sp"
                android:fontFamily="@font/rubik_regular"
                android:textColor="#000"
                android:background="@drawable/bg_edittext" />
            <Button
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/bg_btn"
                android:text="Simpan"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#fff"/>
            <Button
                android:id="@+id/btn_ubah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_btn_white"
                android:text="Ubah"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#000"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>